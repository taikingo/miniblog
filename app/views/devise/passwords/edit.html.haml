.container
  %h2.mb-3 パスワードの変更
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    = f.hidden_field :reset_password_token
    .field.mb-3
      = f.label :password, "新しいパスワード", class: 'form-label'
      %br/
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} 文字以上)
        %br/
      = f.password_field :password, autofocus: true, autocomplete: "新しいパスワード", class: 'form-control'
    .field.mb-3
      = f.label :password_confirmation, "新しいパスワードの確認", class: 'form-label'
      %br/
      = f.password_field :password_confirmation, autocomplete: "新しいパスワード", class: 'form-control'
    .actions.mb-3
      = f.submit "パスワードの変更", class: 'btn btn-primary'
  = render "devise/shared/links"
